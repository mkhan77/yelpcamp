<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Add Comment to <%= campground.name %></h1>
    
    <form class="theform" action="/campgrounds/<%= campground._id %>/comments" method="POST">
        <div class="form-group">
            <label for="search">Comment</label>
            <input class="form-control" id="search" type="text" name="comment[text]" placeholder="Comment">
        </div>
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Add Comment">
        <a href="/campgrounds/<%= campground._id %>">Go Back</a>
    </form>
    
    <% include ../partials/footer %>
</div>