<% include ../partials/header %>
<div class="container">
    <h1 style="text-align:center;">Edit Comment</h1>
    
    <form class="theform" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label for="search">Comment</label>
            <input class="form-control" id="search" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <input type="submit" class="btn btn-lg btn-primary btn-block" value="Add Comment">
        <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </form>
    
</div>

<% include ../partials/footer %>